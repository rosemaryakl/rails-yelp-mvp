<%= simple_form_for [@restaurant, @review] do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= f.input :rating %>
<%= f.input :content %>
<%= f.submit class:"btn btn-success mybtnclass"%>

<% end %>
